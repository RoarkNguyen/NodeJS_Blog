<div class="mt-4">
    <div>
        <h3>My Courses is remove </h3>
        <a href="/me/stored/courses">Comeback My courses</a>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name Course</th>
                <th scope="col">Level</th>
                <th scope="col" colspan="2">Time</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>

                <td>{{this.level}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Restore</a>
                    <a href="" class="btn btn-link" data-toggle="modal" data-target="#deleteCourse"
                        data-id="{{this._id}}">Remove forever</a>

                </td>

            </tr>

            {{/each}}
        </tbody>
    </table>
</div>
{{!-- Confirm delete course --}}
<div class=" modal fade" id="deleteCourse" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Remove Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want remove forever this course?
            </div>
            <div class="modal-footer">
                <button id="btn-delete-course" type="button" class="btn btn-danger">Remove forever</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
{{!-- Delete hidden form --}}
<form name="delete-course-form" method="POST"></form>
{{!-- store hidden form --}}
<form name="restore-course-form" method="POST"></form>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        var courseId;
        var deleteForm = document.forms["delete-course-form"];
        var restoreForm = document.forms["restore-course-form"];

        var btnDeleteCourse = document.getElementById("btn-delete-course");
        var restoreBtn = $(".btn-restore");

        // when dialog confirm clicked
        $('#deleteCourse').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });
        btnDeleteCourse.onclick = function () {
            deleteForm.action = "/courses/" + courseId + "/removeForever?_method=DELETE";
            deleteForm.submit();
        }

        restoreBtn.click(function (e) {
            e.preventDefault();
            var courseId = $(this).data("id");
            restoreForm.action = "/courses/" + courseId + "/restore?_method=PATCH";
            restoreForm.submit();
        })
    });

</script>